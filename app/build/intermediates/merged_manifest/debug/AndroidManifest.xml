<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.promly"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="21"
        android:targetSdkVersion="32" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.example.promly.UnsplashApplication"
        android:allowBackup="true"
        android:appComponentFactory="androidx.core.app.CoreComponentFactory"
        android:debuggable="true"
        android:icon="@mipmap/ic_launcher"
        android:label=""
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/Theme.Promly" >
        <activity
            android:name="com.example.promly.FindFriendsActivity"
            android:exported="false"
            android:theme="@style/Theme.Promly.NoActionBar" />
        <activity
            android:name="com.example.promly.NewGoalActivity"
            android:exported="false"
            android:theme="@style/Theme.Promly.NoActionBar" />
        <activity
            android:name="com.example.promly.ExistingGoalActivity"
            android:exported="false"
            android:theme="@style/Theme.Promly.NoActionBar" />
        <activity
            android:name="com.example.promly.TwentybyTwentyHomeActivity"
            android:exported="false"
            android:theme="@style/Theme.Promly.NoActionBar" />
        <activity
            android:name="com.example.promly.HomePageActivity"
            android:exported="false"
            android:label="@string/title_activity_home_page"
            android:theme="@style/Theme.Promly.NoActionBar" />
        <activity
            android:name="com.example.promly.MainActivity"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.promly.RespectCodeActivity"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.promly.IntroActivity"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <uses-library
            android:name="androidx.window.extensions"
            android:required="false" />
        <uses-library
            android:name="androidx.window.sidecar"
            android:required="false" />

        <activity
            android:name="com.unsplash.pickerandroid.photopicker.presentation.UnsplashPickerActivity"
            android:configChanges="orientation|screenSize"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name="com.unsplash.pickerandroid.photopicker.presentation.PhotoShowActivity"
            android:theme="@style/AppTheme.NoActionBar.Transparent" >
        </activity>

        <provider
            android:name="androidx.startup.InitializationProvider"
            android:authorities="com.example.promly.androidx-startup"
            android:exported="false" >
            <meta-data
                android:name="androidx.emoji2.text.EmojiCompatInitializer"
                android:value="androidx.startup" />
            <meta-data
                android:name="androidx.lifecycle.ProcessLifecycleInitializer"
                android:value="androidx.startup" />
        </provider>
        <provider
            android:name="com.squareup.picasso.PicassoProvider"
            android:authorities="com.example.promly.com.squareup.picasso"
            android:exported="false" />
    </application>

</manifest>