<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">


    <ImageView
        android:id="@+id/intro_ball"
        android:layout_width="190dp"
        android:layout_height="190dp"
        android:src="@drawable/ic_ball"
        android:layout_marginTop="100dp"
        app:layout_constraintBottom_toTopOf="@id/intro_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />


    <ImageView
        android:id="@+id/intro_logo"
        android:layout_width="228dp"
        android:layout_height="40dp"
        android:src="@drawable/logo"
        app:layout_constraintBottom_toTopOf="@id/intro_slogan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/intro_ball"
        android:layout_marginTop="20dp"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/intro_slogan"
        android:layout_width="343dp"
        android:layout_height="28dp"
        android:text="@string/intro_slogan"
        android:textColor="@color/white"
        android:fontFamily="@font/avenir_roman"
        android:textSize="20sp"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@id/intro_email_button"
        app:layout_constraintTop_toBottomOf="@id/intro_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="20dp"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/intro_email_button"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:background="@drawable/gradient_button"
        android:text="@string/intro_email_text"
        android:textColor="@color/white"
        android:fontFamily="@font/avenir_roman"
        android:layout_marginTop="120dp"
        app:layout_constraintTop_toBottomOf="@+id/intro_slogan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/intro_apple_button"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/intro_apple_button"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:background="@drawable/rounded_corners_white"
        android:text="@string/intro_apple_text"
        android:textColor="@color/black"
        android:fontFamily="@font/avenir_roman"
        app:layout_constraintTop_toBottomOf="@+id/intro_email_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/intro_google_button"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/intro_google_button"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:background="@drawable/rounded_corners_red"
        android:text="@string/intro_google_text"
        android:textColor="@color/white"
        android:fontFamily="@font/avenir_roman"
        app:layout_constraintTop_toBottomOf="@+id/intro_apple_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="30dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>