<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.promly">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".UnsplashApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label=""
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Promly">
        <activity
            android:name=".FindFriendsActivity"
            android:theme="@style/Theme.Promly.NoActionBar"
            android:exported="false" />
        <activity
            android:name=".NewGoalActivity"
            android:exported="false"
            android:theme="@style/Theme.Promly.NoActionBar" />
        <activity
            android:name=".ExistingGoalActivity"
            android:exported="false"
            android:theme="@style/Theme.Promly.NoActionBar" />
        <activity
            android:name=".TwentybyTwentyHomeActivity"
            android:exported="false"
            android:theme="@style/Theme.Promly.NoActionBar" />
        <activity
            android:name=".HomePageActivity"
            android:exported="false"
            android:label="@string/title_activity_home_page"
            android:theme="@style/Theme.Promly.NoActionBar" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RespectCodeActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".IntroActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>