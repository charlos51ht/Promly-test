<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="0dp"
    android:background="@color/black"
    tools:context=".TwentybyTwentyHomeActivity">


    <ScrollView
        android:layout_width="409dp"
        android:layout_height="match_parent"
        android:layout_marginTop="120dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/twenty_welcome"
                    android:layout_width="match_parent"
                    android:layout_height="63dp"
                    android:fontFamily="@font/avenir_roman"
                    android:text="@string/twenty_welcome"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="17sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2px"
                android:orientation="horizontal">


                <Button
                    android:id="@+id/empty1"
                    android:layout_width="228dp"
                    android:layout_height="228dp"
                    android:layout_margin="5px"
                    android:background="@drawable/empty_goal"
                    android:gravity="left|bottom"
                    android:textColor="@color/white"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"></Button>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/empty2"
                        android:layout_width="112dp"
                        android:layout_height="112dp"
                        android:layout_margin="5px"
                        android:gravity="left|bottom"
                        android:text=""
                        android:textColor="@color/white"
                        app:background="@drawable/empty_goal"
                        app:layout_constraintTop_toTopOf="parent"></Button>

                    <Button
                        android:id="@+id/empty3"
                        android:layout_width="112dp"
                        android:layout_height="112dp"
                        android:layout_margin="5px"
                        app:background="@drawable/empty_goal"
                        app:layout_constraintTop_toTopOf="parent"></Button>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/empty4"
                        android:layout_width="112dp"
                        android:layout_height="112dp"
                        android:layout_margin="5px"
                        app:background="@drawable/empty_goal"
                        app:layout_constraintTop_toTopOf="parent"></Button>

                    <Button
                        android:id="@+id/empty5"
                        android:layout_width="112dp"
                        android:layout_height="112dp"
                        android:layout_margin="5px"
                        app:background="@drawable/empty_goal"
                        app:layout_constraintTop_toTopOf="parent"></Button>

                    <Button
                        android:id="@+id/empty6"
                        android:layout_width="112dp"
                        android:layout_height="112dp"
                        android:layout_margin="5px"
                        app:background="@drawable/empty_goal"
                        app:layout_constraintTop_toTopOf="parent"></Button>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/empty7"
                        android:layout_width="228dp"
                        android:layout_height="112dp"
                        android:layout_margin="5px"
                        android:paddingBottom="34dp"
                        app:layout_constraintTop_toTopOf="parent"></Button>

                    <Button
                        android:id="@+id/empty8"
                        android:layout_width="228dp"
                        android:layout_height="228dp"
                        android:layout_margin="5px"
                        app:background="@drawable/empty_goal"
                        app:layout_constraintTop_toTopOf="parent"></Button>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/empty9"
                        android:layout_width="228dp"
                        android:layout_height="112dp"
                        android:layout_margin="5px"
                        app:background="@drawable/empty_goal"
                        app:layout_constraintTop_toTopOf="parent"></Button>

                    <Button
                        android:id="@+id/empty10"
                        android:layout_width="228dp"
                        android:layout_height="228dp"
                        android:layout_margin="5px"
                        app:background="@drawable/empty_goal"
                        app:layout_constraintTop_toTopOf="parent"></Button>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/empty11"
                        android:layout_width="112dp"
                        android:layout_height="112dp"
                        android:layout_margin="5px"
                        app:background="@drawable/empty_goal"
                        app:layout_constraintTop_toTopOf="parent"></Button>

                    <Button
                        android:id="@+id/empty12"
                        android:layout_width="112dp"
                        android:layout_height="112dp"
                        android:layout_margin="5px"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/empty_goal"></Button>

                    <Button
                        android:id="@+id/empty13"
                        android:layout_width="112dp"
                        android:layout_height="112dp"
                        android:layout_margin="5px"
                        app:background="@drawable/empty_goal"
                        app:layout_constraintTop_toTopOf="parent"></Button>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/empty14"
                        android:layout_width="112dp"
                        android:layout_height="112dp"
                        android:layout_margin="5px"
                        app:background="@drawable/empty_goal"
                        app:layout_constraintTop_toTopOf="parent"></Button>

                    <Button
                        android:id="@+id/empty15"
                        android:layout_width="112dp"
                        android:layout_height="112dp"
                        android:layout_margin="5px"
                        app:background="@drawable/empty_goal"
                        app:layout_constraintTop_toTopOf="parent"></Button>

                    <Button
                        android:id="@+id/empty16"
                        android:layout_width="112dp"
                        android:layout_height="112dp"
                        android:layout_margin="5px"
                        app:background="@drawable/empty_goal"
                        app:layout_constraintTop_toTopOf="parent"></Button>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/empty17"
                        android:layout_width="228dp"
                        android:layout_height="112dp"
                        android:layout_margin="5px"
                        app:background="@drawable/empty_goal"
                        app:layout_constraintTop_toTopOf="parent"></Button>

                    <Button
                        android:id="@+id/empty18"
                        android:layout_width="228dp"
                        android:layout_height="228dp"
                        android:layout_margin="5px"
                        app:background="@drawable/empty_goal"
                        app:layout_constraintTop_toTopOf="parent"></Button>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/empty19"
                    android:layout_width="228dp"
                    android:layout_height="112dp"
                    android:layout_margin="5px"
                    app:background="@drawable/empty_goal"
                    app:layout_constraintTop_toTopOf="parent"></Button>

                <Button
                    android:id="@+id/empty20"
                    android:layout_width="112dp"
                    android:layout_height="112dp"
                    android:layout_margin="5px"
                    app:background="@drawable/empty_goal"
                    app:layout_constraintTop_toTopOf="parent"></Button>

            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>